{% extends 'layout/layout.html.twig' %}

{% block main_content %}
    <div class="card">
        <div class="card-header">
            <h3>All Orders</h3>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th class="text-center">Order Number</th>
                                <th class="text-center">State</th>
                                <th class="text-center">Date</th>
                                <th class="text-center">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for order in orders %}
                                <tr>
                                    <td class="text-center">#{{ order.id }}</td>
                                    <td class="text-center">
                                        <span class="badge badge-warning">{{ order.state }}</span>
                                    </td>
                                    <td class="text-center">{{ order.createdAt|date('d/m/Y') }}</td>
                                    <td class="text-center">
                                        <div class="text-center">
                                            <a href="{{ path('show_order',{'id': order.id}) }}" type="button" class="btn btn-info btn-lg" data-bs-toggle="modal"
                                               data-bs-target="#orderLogsModal"><i
                                                        class="mdi mdi-eye"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div class="navigation">
                            {{ knp_pagination_render(orders) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block title %}
    {{ department_name }}
{% endblock %}

{% block javascripts %}
